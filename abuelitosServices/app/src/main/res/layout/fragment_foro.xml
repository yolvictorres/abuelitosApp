<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:desing="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/FirtsFragment"
    tools:context=".foroActivity$PlaceholderFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Evento"
        android:id="@+id/textforo"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <android.support.design.widget.BottomNavigationView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NavBot"
        android:layout_gravity="bottom"
        desing:menu="@menu/menu_navigation"
        />

    <ListView
        android:id="@+id/listview_foro"
        android:layout_width="match_parent"
        android:layout_margin="17dp"
        android:layout_height="415dp" />

</FrameLayout>