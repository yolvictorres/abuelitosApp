<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.edu.konradlorenz.a506132023.abuelitosservices.RegistroActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Foto de perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fototext" />

        <ImageButton
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/FotoButton"
            android:layout_weight="0.30" />

        <TextView
            android:text="Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombretext" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/nombreRegistro" />

        <TextView
            android:text="cedula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cedulatext" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/cedulaRegistro" />

        <TextView
            android:text="contraseÃ±a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contrasenaText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/contrasenaRegistro" />

        <TextView
            android:id="@+id/tipoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tipo usuario" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/tusernatural"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="false"
                android:text="usuario natural" />

            <CheckBox
                android:id="@+id/tuserjuridico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="false"
                android:text="usuario juridico" />
        </LinearLayout>

        <Button
            android:id="@+id/registroButton"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="registrarse" />
    </LinearLayout>
</RelativeLayout>
