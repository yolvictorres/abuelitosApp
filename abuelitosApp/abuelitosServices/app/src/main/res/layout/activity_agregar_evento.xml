<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_agregar_evento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.edu.konradlorenz.a506132023.abuelitosservices.AgregarEventoActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/agreventoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregr foto del evento"
            android:layout_alignBottom="@+id/imageEventoButton"
            android:layout_alignLeft="@+id/imageEventoButton"
            android:layout_alignStart="@+id/imageEventoButton" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/set_picture"
                android:layout_width="296dp"
                android:layout_height="160dp"
                android:layout_below="@+id/show_options_button"
                android:adjustViewBounds="true"
                android:contentDescription="contentDescriptionImagenSet"
                app:srcCompat="@android:drawable/ic_menu_my_calendar"
                />

            <ImageButton
                android:id="@+id/FotoButton"
                style="@android:style/Widget.Holo.ImageButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:elevation="0dp"
                app:srcCompat="@android:drawable/ic_menu_camera" />
        </LinearLayout>
        <TextView
            android:id="@+id/descripcionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar descripcion del evento"
            android:layout_alignBottom="@+id/imageEventoButton"
            android:layout_alignLeft="@+id/imageEventoButton"
            android:layout_alignStart="@+id/imageEventoButton" />

        <EditText
            android:id="@+id/eventoDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <Button
            android:id="@+id/buttonAgregarEvento"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Agregar Evento" />

    </LinearLayout>
</RelativeLayout>
